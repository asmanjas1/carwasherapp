<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="carwasherRepo.fragments.ConsumerSettingFragment"
    android:weightSum="1">

    <TextView
        android:id="@+id/tempID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Submit Your Query To Us "
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tempID1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Email us to: asmanjaskumar@gmail.com "
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tempID2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Call us: 9742236575"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="80dp"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_contact_us_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tempID1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Send Mail" />

    <Button
        android:id="@+id/btn_contact_us_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_contact_us_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Call Us" />
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_contact_us_call"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="100dp"
        android:text="LogOut" />

</RelativeLayout>